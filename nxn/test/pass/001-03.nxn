// Swap two integers using pointers

fn main() i32 {
    let mut a = 8;
    let mut b = 7;

    swap1(a&mut, b&mut);
    swap2(a&mut, b&mut);
    swap3(a&mut, b&mut);
    swap4(a&mut, b&mut);

    swap1(a%, b%);
    swap2(a%, b%);
    swap3(a%, b%);
    swap4(a%, b%);

    return a;
}

fn swap1(a: mut&int, b: mut&int) {
    let avalue = a#;
    let bvalue = b#;
    a# = avalue;
    b# = bvalue;
}

fn swap2(a: %int, b: %int) {
    let avalue = a#;
    let bvalue = b#;
    a# = avalue;
    b# = bvalue;
}

fn swap3(a: mut&a|int, b: mut&a|int) {
    let avalue = a#;
    let bvalue = b#;
    a# = avalue;
    b# = bvalue;
}

fn swap4(a: %a|int, b: %a|int) {
    let avalue = a#;
    let bvalue = b#;
    a# = avalue;
    b# = bvalue;
}
